<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="hibernate.jpa">
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://127.0.0.1:3306/simple_users?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="rootroot"/>

            <property name="connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="show_sql" value="true"/>
            <property name = "hibernate.show_sql" value = "true" />
            <property name="format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--        makes hibernate create and drop a table-->
            <!-- JDBC connection pool (use the built-in) -->
            <property name="connection.pool_size" value="1"/>
            <property name="current_session_context_class" value="thread"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
            <property name="hibernate.connection.characterEncoding" value="utf8"/>
            <!-- Mapping files will go here.... -->
        </properties>
    </persistence-unit>
</persistence>